{{ attach_library('ldnddev_file_or_link/ldnddev_file_or_link') }}
{%
    set classes = [
        'ldnddev-file-or-link'
    ]
%}

{% if content.field_ldnddev_file-or-link_css.0 %}
    {% set classes = classes|merge([content.field_ldnddev_file-or-link_css.0|render|clean_class]) %}
{% endif %}
{% if content.field_ldnddev_file_or_link_view|render|trim() == 'On' %}
    {% set classes = classes|merge(['-cta']) %}
{% endif %}

<div {{ attributes.addClass(classes) }}>
    <div class="ldnddev-file-or-link__items">
        {{ content.field_ldnddev_file_or_link_item }}
    </div>
</div>